<style>
  #bar-details {
    margin-bottom: 20px;
  }

  .special {
    margin-left: 25px;
    float: right;
  }

  .special-detail {
    margin-bottom: 40px;
  }

  .day {
    margin-right: 25px;
  }

</style>
<div id="bar-details">
  <div class="bar-name">
    <%=h @bar.name %>
  </div>
  <div class="address">
    <%=h @bar.address %>
  </div>
</div>

<% Date::DAYNAMES.each do |day|
  if @bar.special.send(day.downcase.to_sym) %>
    <div class="special-detail">
      <span class="special"><%=  @bar.special.send(day.downcase.to_sym) %></span>
      <span class="day"><%= day %></span>
    </div>
  <% end %>
<% end %>
