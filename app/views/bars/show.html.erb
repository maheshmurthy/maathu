<style>
  #bar-details {
    margin-bottom: 20px;
  }

  .special {
    margin-left: 25px;
    float: right;
  }

  .special-detail {
    margin-bottom: 40px;
  }

  .day {
    margin-right: 25px;
  }

</style>
<div id="bar-details">
  <div class="bar-name">
    <%=h @bar.name %>
  </div>
  <div class="address">
