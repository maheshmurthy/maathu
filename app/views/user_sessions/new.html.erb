<div id="int-container" style="width: 700px;">
<div class="heading">Login</div>
 
<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>
  <%= f.label :username, :username, :class => "label-text" %><br />
  <%= f.text_field :username %><br />
  <br />
  <%= f.label :password, :password, :class => "label-text"  %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= link_to 'Forgot password', new_password_reset_path, :class => "label-text" %>
  <br />
  <%= f.submit "Login" %>
<% end %>
</div>
