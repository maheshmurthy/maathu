<h1>Daily Specials</h1>

<% form_for(@special) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :keyword %>
    <%= f.text_field :keyword %>
  </p>
  <% for i in Special::DAYS %>
    <p>
      <%= f.label i %><br />
      <%= f.text_area i, :rows => 5, :cols => 40 %>
    </p>
  <% end %>
  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>

<%= link_to 'Back', specials_path %>
