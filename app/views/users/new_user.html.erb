<h1>Add user</h1>

<% form_for :user, :url => {:action => 'add_new_user'} do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.hidden_field :account_id %>
  </p>
  <p>
    <%= f.submit 'Add User' %>
  </p>
<% end %>
