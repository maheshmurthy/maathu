<div id="days">
  <% 
    for day in Date::DAYNAMES %>
    <div class="day">
      <%= link_to day, :controller => "specials", :action => "day", :id => day.downcase %>
    </div>
  <% end %>
</div>
<div id="ranklist">
<% @specials.each do |special| %>
  <div class="special">
    <div class="special-name"> <%= special.day_special %></div>
    <div class="rank"> <%= link_to_remote 'U', :url => {:controller => "specials", :action => "upvote", :id => special.id} %></div> 
    <div class="specials-meta-info">
      <%= link_to special.name, { :controller => "bars", :action => "show", :id => special.bar_id}, :class => "tag-link" %>
    </div>
  </div>
<% end %>
</div>
